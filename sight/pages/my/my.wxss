.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}
.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
  position:absolute;
}
.text{
  width: 90%;
  margin: 0 auto;
  box-shadow: 1px 1px 4px lightgrey;
  margin-top: 10%;
  border-radius: 3%;
}
.userinfo-nickname {
  display: block;
  color: #aaa;
  text-align: center;
  line-height: 100px;
}
.lists{
  margin-top: 20px;
}
.lists ul li{
  width: 90%;
  height: 50px;
  display: inline-block;
  line-height: 50px;
  margin-left: 5%;
}
.lists li image{
  width: 20px;
  height: 20px;
}
.lists text{
  margin-left: 10px;
  letter-spacing: 1px;
}
.btn{
  width: 80%;
  margin: 0 auto;
  font-size: 12px;
  margin-top: 10%;
}
.btn button{
  background-color: rgba(239, 179, 54,0.5);
  color: white;
}
